<script>
function checkAnswer(choice) {
    if(choice === "Licht") {
        window.location.href = "stap3.html";
    } else {
        document.getElementById("feedback").innerHTML = "Niet correct. Denk logisch en probeer het nog eens.";
    }
}
</script>

